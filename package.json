{
    "name": "vzor-frontend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "bun run --bun eslint --fix .",
        "lint:styles": "bun run --bun stylelint **/*.css --fix --ignore-path .gitignore",
        "format": "bun run --bun prettier . --write --ignore-path .gitignore",
        "dev": "bun run --bun next dev --turbopack",
        "build": "bun run --bun next build",
        "start": "bun run --bun next start",
        "add-component": "bun run --bun shadcn add",
        "prepare": "bun run --bun husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(json|md|yaml|yml|Dockerfile)": [
            "bun run --bun prettier --write --ignore-path .gitignore"
        ],
        "*.(js|jsx|mjs|ts|tsx)": [
            "bun run --bun prettier --write --ignore-path .gitignore",
            "bun run --bun eslint --fix"
        ],
        "*.css": [
            "bun run --bun stylelint --fix --ignore-path .gitignore"
        ]
    },
    "dependencies": {
        "iron-session": "^8.0.4",
        "iron-store": "^1.3.5",
        "next": "~15.2.1",
        "react": "~19.1.0",
        "react-dom": "~19.1.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.7",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.23.0",
        "@hookform/resolvers": "^4.1.3",
        "@iconify/icons-fluent-emoji": "^1.2.11",
        "@iconify/react": "^5.2.0",
        "@radix-ui/react-accordion": "^1.2.3",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-checkbox": "^1.1.4",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-popover": "^1.1.6",
        "@radix-ui/react-scroll-area": "^1.2.3",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-tabs": "^1.1.3",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@tailwindcss/postcss": "^4.0.6",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/react-swipeable": "^5.2.0",
        "autoprefixer": "^10.4.20",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "^1.0.4",
        "embla-carousel-react": "^8.5.2",
        "eslint": "^9.23.0",
        "eslint-config-next": "~15.2.4",
        "eslint-config-prettier": "^10.1.1",
        "framer-motion": "^12.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "lucide-react": "^0.485.0",
        "motion": "^12.4.10",
        "msw": "^2.7.3",
        "next-themes": "^0.4.4",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "react-day-picker": "~8.10.1",
        "react-dropzone": "^14.3.8",
        "react-hook-form": "^7.54.2",
        "react-swipeable": "^7.0.2",
        "react-zoom-pan-pinch": "^3.7.0",
        "recharts": "^2.15.1",
        "shadcn": "^2.4.0-canary.12",
        "skeleton": "^0.1.2",
        "sonner": "^2.0.0",
        "stylelint": "^16.19.1",
        "stylelint-config-recommended": "^15.0.0",
        "stylelint-config-tailwindcss": "^1.0.0",
        "tailwind-merge": "^3.0.2",
        "tailwindcss": "^4.0.7",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0",
        "vaul": "^1.1.2",
        "zod": "^3.24.2"
    }
}
